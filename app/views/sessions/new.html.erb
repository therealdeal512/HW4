<h1>Login</h1>

<%= form_with url: login_path, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <%= form.submit "Log In", class: "btn btn-primary" %>
<% end %>
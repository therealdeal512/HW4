<div class="container mt-5">
  <h1 class="mb-4"><%= @entry.title %></h1>

  <p><strong>Description:</strong> <%= @entry.description %></p>

  <p><strong>Occurred on:</strong> <%= @entry.occurred_on.strftime("%B %d, %Y") %></p>

  <% if @entry.image.attached? %>
    <div class="mt-3">
      <%= image_tag @entry.image, class: "img-fluid rounded shadow" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= link_to "Back to Place", place_path(@entry.place), class: "btn btn-secondary" %>
  </div>
</div>

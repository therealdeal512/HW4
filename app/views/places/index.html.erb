<h1 class="mb-4">Places</h1>

<div class="row">
  <div class="col-md-8">
    <ul class="list-group">
      <% for place in @places %>
        <li class="list-group-item">
          <%= link_to place.name, place_path(place), class: "text-decoration-none" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="mt-4">
  <%= link_to "New place", new_place_path, class: "btn btn-primary" %>
</div>
